%div
  %button.btn.btn-lng.btn-primary.reserve Create new Todo

  %form.todo-form{ action: '/api/todos', method: 'POST' }
    = Rack::Csrf.tag(env)
    %input.form-control.task{ :autofocus => "true", :name => "task", :placeholder => "Task to do", :required => "", :type => "text" }/
    %button.btn.btn-lng.btn-primary.btn-block.submit-todo{ type: "Submit" } Save
.errors{ style: 'color: red;' }
.success{ style: 'color: green;' }
= "Number of todos at #{@day}: #{@todos.count}"

%table.table.table-striped
  %tr
    %th.span1 Tasks
  -@todos.each do |todo|
    %tr
      %td= todo.task

.todo-paginate
  %a{ href: "#{request.base_url}?day=#{@day - 1}" }
    <- Previous

  %a{ href: "#{request.base_url}?day=#{@day + 1}" }
    Next ->
