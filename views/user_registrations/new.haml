.login-form
  %form.form-signin{ action: '/user_registrations/create', method: 'POST' }
    = Rack::Csrf.tag(env)
    %h2.form-signin-heading Please Register

    %label.sr-only{ :for => "email" } Email address
    %input.form-control{ :autofocus => "", :name => "email", :placeholder => "Email address", :required => "", :type => "email" }/

    %label.sr-only{ :for => "password" } Password
    %input.form-control{ :name => "password", :placeholder => "Password", :required => "", :type => "password" }/

    %label.sr-only{ :for => "password_confirmation" } Password confirmation
    %input.form-control{ :name => "password_confirmation", :placeholder => "Password confirmation", :required => "", :type => "password" }/

    %button.btn.btn-lng.btn-primary.btn-block{ type: "Submit" } Sign up
